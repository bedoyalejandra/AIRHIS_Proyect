<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="#efefef"
    tools:context=".Indication">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSTRUCCIONES"
            android:textColor="#08a7bc"
            android:fontFamily="@font/avenirnextcondensed_demibold"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/avenirnextcondensed"
            android:textAlignment="center"
            android:text="Escoge cualquier punto en el mapa y descubre como se encuentra la calidad del aire en ese lugar."
            android:textColor="#000000"
            android:textSize="23dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:background="@drawable/select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presiona durante un segundo para poner una marca."
                android:fontFamily="@font/avenirnextcondensed"
                android:textColor="#000000"
                android:textSize="23dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:background="@drawable/marca"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona la marca para obtener más información."
                android:fontFamily="@font/avenirnextcondensed"
                android:textColor="#000000"
                android:textSize="23dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/initn"></ImageView>
    </LinearLayout>

</RelativeLayout>